.close_btn {
  margin-left: 50rpx;
}


.stuCode {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 20px;
}

.stuCode .part {
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}

.stuCode .year::after {
  content: '/';
  color: rgb(173, 173, 173);
  font-size: 50rpx;
  margin-left: 20rpx;
}

.input_box {
  width: 1px;
  height: 1px;
  position: absolute;
  top: 0;
  left: 0;
}

.stuCode .part view {
  width: 80rpx;
  border: 1rpx solid #979797;
  margin: 0 10rpx;
  height: 80rpx;
  border-radius: 4px;
  font-size: 40rpx;
  font-weight: bold;
  color: #2C8EBB;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stuCode .year view {
  color: rgb(173, 173, 173);
}

.stuCode .activeView {
  border-color: #2C8EBB !important;
}

.lodingBtn {
  width: 100%;
  height: 50px;
  margin-top: 20px;
  background: #93b5c5;
  border-radius: 99px;
  text-align: center;
  line-height: 50px;
  color: #fff;
  font-size: 16px;
}

.trueLoding {
  background: #2C8EBB;
}

.bottom {
  color: rgb(173, 173, 173);
  font-size: small;
  margin-top: 80rpx;
  text-align: center;
}

.goto_admin {
  position: absolute;
  bottom: 100rpx;
  font-weight: bold;
  font-size: small;
  width: 100%;
  text-align: center;
  color: #2C8EBB;
}